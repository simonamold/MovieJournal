<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Activities.DetailsActivity"
    >

    <include
        android:id="@+id/toolBar1"
        layout="@layout/details_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        />

    <TextView
        android:id="@+id/txtTitleDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:fontFamily="@font/montaga"
        android:textSize="20sp"
        android:textColor="@color/carafe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolBar1"
        app:layout_constraintBottom_toTopOf="@+id/txtGenreDetail"/>

    <TextView
        android:id="@+id/txtGenreDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genre"
        android:textColor="@color/carafe"
        android:fontFamily="@font/montaga"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitleDetail"
        app:layout_constraintBottom_toTopOf="@+id/txtReleaseYearDetail"/>

    <TextView
        android:id="@+id/txtReleaseYearDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Release Year"
        android:textSize="20sp"
        android:textColor="@color/carafe"
        android:fontFamily="@font/montaga"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitleDetail"
        app:layout_constraintBottom_toTopOf="@+id/txtDescriptionDetail"/>

    <TextView
        android:id="@+id/txtDescriptionDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:fontFamily="@font/montaga"
        android:textColor="@color/carafe"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtGenreDetail"
        />

</androidx.constraintlayout.widget.ConstraintLayout>